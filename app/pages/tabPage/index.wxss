.random {
  display: flex;
  height: 300px;
  margin-top: 20px;
  margin-bottom: 20px;
  background-color: rgb(250, 237, 237);
}

/* 蒙层 */
#model {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  width: 100vw;
  height: 300px;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  z-index: 10
}

#model .item {
  text-align: center
}

#model .modelImg {
  width: 40vw;
}

.random .right {
  width: 375rpx;
  padding: 6% 0;
}

#dice {
  top: 130rpx;
  position: relative;
  left: 60rpx;
}

.dice {
  position: relative;
  left: 30rpx;
  top: 30rpx;
}

#tip {
  position: absolute;
  font-size: 45rpx;
  padding: 30rpx 30rpx;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  background: linear-gradient(#c75a4d, #c75a4d) left top,
    linear-gradient(#c75a4d, #c75a4d) left top,
    linear-gradient(#c75a4d, #c75a4d) right top,
    linear-gradient(#c75a4d, #c75a4d) right top,
    linear-gradient(#c75a4d, #c75a4d) left bottom,
    linear-gradient(#c75a4d, #c75a4d) left bottom,
    linear-gradient(#c75a4d, #c75a4d) right bottom,
    linear-gradient(#c75a4d, #c75a4d) right bottom;
  background-repeat: no-repeat;
  background-size: 1px 24px, 24px 1px;
}

#click {
  font-size: 32rpx;
}

.tipbox {
  width: 200rpx;
  height: 200rpx;
}

#points {
  position: absolute;
  top: 270rpx;
  width: 250rpx;
  text-align: center;
}

/* 底部标签 */

.tag {
  white-space: nowrap;
}

.tasteTagCtn {
  padding-bottom: 30rpx;
}

.areaTagCtn {
  margin-left: 30rpx;
}

.tag .tasteTag,
.tag .areaTag {
  display: inline-block;
  color: white;
  height: 20px;
  width: 70px;
  text-align: center;
  margin: 10px;
  font-size: 13px;
  border-radius: 5px;
}

.tasteTag {
  background-color: rgb(244, 146, 85);
}

.areaTag {
  background-color: rgb(248, 179, 58);
}

.ctag {
  background-color: rgb(255, 160, 177);
}