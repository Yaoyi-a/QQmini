::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.selected {
  background: #68be8d !important;
}

.placeholder {
  margin-top: -5rpx;
  margin-left: 5%;
}

.placeholder .box text {
  color: grey;
  font-size: 24rpx;
}

.placeholder .box {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60%;
  border: 2rpx solid grey;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
}

#searchImg {
  width: 40rpx;
  height: 40rpx;
}

#dice image {
  width: 200rpx;
  height: 200rpx;
}

#choiceArea {
  width: 375rpx;
}

.basicSet .item {
  background: linear-gradient(to right, #ffecd2 0%, #fcb69f 100%);
}

.tastySet .item {
  background: linear-gradient(60deg, #abecd6 0%, #fbed96 100%)
}

.right {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.right .foodlist {
  width: 48%;
  text-align: center;
}

.right .foodlist .item {
  padding: 8rpx 0;
  text-align: center;
  margin: 20rpx 0;
  border: 3rpx solid white;
  border-radius: 15rpx;
}


/* fangjiaxin */

.place {
  display: inline-block;
  background-color: white;
  color: rgb(248, 114, 97);
  height: 20px;
  width: 150px;
  text-align: center;
  border-right: rgb(251, 86, 85) 1px solid;
  margin-top: 10px;
  font-size: 13px;
}

.hover1 {
  color: rgb(251, 86, 85);
  background-color: rgb(253, 219, 219);
}

.flex {
  white-space: nowrap;
  display: flex;
  justify-content: space-around;
}

.flex .food {
  margin: 35rpx 0;
}

.icon {
  width: 35px;
  height: 35px;
}

.food {
  width: 47px;
  height: 40px;
  text-align: center;
  display: inline-block;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
}


.kk {
  height: 150px;
  width: 150px;
  margin-top: 100px;
}

.btn {
  width: 100px;
  height: 35px;
  font-size: 15px;
  background-color: rgb(251, 86, 85);
  color: white;
}

.button {
  margin-left: auto;
  margin-right: 0px;
}

.hover {
  background-color: rgb(253, 54, 54);
}

